APP_NAME=Chatter
# The environment the app is running in.  'local', 'development', or 'production'
APP_ENV=local
# The app's encryption key.  Generated by `php artisan key:generate`
APP_KEY=
# Whether error stack traces should be shown.  Set to 'false' in production
APP_DEBUG=true
# The base URL that this app is being served from.
APP_URL=http://localhost

# Feature flag for turning on activity digests by email.  Requires MAIL_* env vars to be set, and a
# scheduler running in the background.
APP_FEATURE_MAIL_ACTIVITY_DIGESTS=false

# Where you want log files to be written.  See config/logging.php for details.
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database connection info.  See config/database.php for details.
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

# Information about various services used by Laravel.  See the relevant file in the 'config' directory for details.
BROADCAST_DRIVER=null
CACHE_DRIVER=database
QUEUE_CONNECTION=sync
SESSION_DRIVER=database
SESSION_LIFETIME=1200

# SMTP server for sending mail (or info about which log to write it to, for local development)
# See config/mail.php for details.
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# Using Pusher, or something Pusher-compatible, for event broadcasting?  Connection info here.
PUSHER_APP_HOST=
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
MIX_PUSHER_WS_HOST="${PUSHER_APP_HOST}"
